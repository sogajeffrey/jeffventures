---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
export async function getStaticPaths() {
	// Blog is disabled; return no static paths so the route can still exist without pages.
	return [];
}
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<section>
				<h1>Article not available</h1>
				<p>The blog is currently disabled. Please check the <a href="/services">Services</a> or <a href="/about">About</a> pages.</p>
			</section>
		</main>
		<Footer />
	</body>
</html>
