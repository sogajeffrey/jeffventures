---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<!-- <HeaderLink href="/blog">Blog</HeaderLink> -->
			<HeaderLink href="/services">Services</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>

		<div class="header-actions">
			<a class="icon-link" href="https://www.instagram.com/jeffventures25/" target="_blank" rel="noopener noreferrer" aria-label="Jeff Ventures on Instagram">
				<svg width="20" height="20" viewBox="0 0 24 24" fill="none" aria-hidden="true" focusable="false" xmlns="http://www.w3.org/2000/svg">
					<rect x="3" y="3" width="18" height="18" rx="5" ry="5" stroke="currentColor" stroke-width="1.5"/>
					<path d="M8 11.5a4 4 0 1 0 8 0 4 4 0 0 0-8 0z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
					<circle cx="17.5" cy="6.5" r="0.5" fill="currentColor"/>
				</svg>
			</a>
			<a class="icon-link" href="https://www.youtube.com/@JeffVentures25" target="_blank" rel="noopener noreferrer" aria-label="Jeff Ventures on YouTube">
				<svg width="20" height="20" viewBox="0 0 24 24" fill="none" aria-hidden="true" focusable="false" xmlns="http://www.w3.org/2000/svg">
					<path d="M23.498 6.186a2.998 2.998 0 0 0-2.11-2.117C19.304 3.5 12 3.5 12 3.5s-7.304 0-9.388.569a2.998 2.998 0 0 0-2.11 2.117A31.14 31.14 0 0 0 0 12a31.14 31.14 0 0 0 .502 5.814 2.998 2.998 0 0 0 2.11 2.117C4.696 20.5 12 20.5 12 20.5s7.304 0 9.388-.569a2.998 2.998 0 0 0 2.11-2.117A31.14 31.14 0 0 0 24 12a31.14 31.14 0 0 0-.502-5.814zM9.75 15.02V8.98L15.5 12l-5.75 3.02z" fill="currentColor"/>
				</svg>
			</a>
			<a class="contact-button" href="#" aria-label="Contact coming soon" tabindex="-1" aria-disabled="true">
				<svg width="20" height="20" viewBox="0 0 24 24" fill="none" aria-hidden="true" focusable="false" xmlns="http://www.w3.org/2000/svg">
					<path d="M3 6.5C3 5.67157 3.67157 5 4.5 5H19.5C20.3284 5 21 5.67157 21 6.5V17.5C21 18.3284 20.3284 19 19.5 19H4.5C3.67157 19 3 18.3284 3 17.5V6.5Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
					<path d="M4 7.5L12 13L20 7.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
				</svg>
				<span class="sr-only">Contact</span>
			</a>
		</div>

	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		/* keep title left-aligned; internal links will be centered with margin auto */
		justify-content: flex-start;
	}
	.internal-links {
		display: flex;
		gap: 0.5rem;
		margin: 0 auto; /* centers this element within the nav */
	}

	.header-actions {
		margin-left: auto; /* push actions to the right */
		display: flex;
		align-items: center;
	}

	/* icon-only contact button: neutral (no colored background) */
	.contact-button {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		padding: 0.25rem;
		background: transparent;
		color: var(--black);
		border-radius: 6px;
		text-decoration: none;
		line-height: 0;
	}

	.contact-button svg {
		display: block;
	}

	.icon-link {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		margin-right: 0.5rem;
		color: var(--black);
		text-decoration: none;
	}

	.icon-link:hover {
		color: rgb(var(--gray-dark));
		background: rgba(0,0,0,0.03);
	}

	.contact-button:hover {
		color: rgb(var(--gray-dark));
		background: rgba(0,0,0,0.03);
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: rgb(var(--gray-dark));
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
